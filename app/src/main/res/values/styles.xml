<resources>

    Base application theme.

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blueForAll</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/blueForAll</item>
    </style>



    <style name="ButtonOrangeStyle" >
        <item name="backgroundTint">#F44336</item>
        <item name="elevation">20sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>/>
    </style>

    <style name="RadioButtonCustomStyle">
        <item name="android:textColor">@color/white</item>
        <item name="elevation">20sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
    </style>



    <style name="ButtonPrimaryColorStyle" >
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="elevation">20sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>/>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@android:color/white</item>

        <!-- Additionally if you want animations when dialog opening -->
        <item name="android:windowEnterAnimation">@android:anim/bounce_interpolator</item>
        <item name="android:windowExitAnimation">@android:anim/bounce_interpolator</item>
    </style>

    <style name="AppThemeForNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blueForAll</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/blueForAll</item>
    </style>


    <style name="AppTheme.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorButtonNormal">@color/blueForAll</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="style_for_text_content" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorButtonNormal">@color/blueForAll</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBarForBrowser">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Hints" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
