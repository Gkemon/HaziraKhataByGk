<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e3f2fd">

    <LinearLayout
        android:id="@+id/ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="6sp"
            android:background="@color/colorPrimaryDark">
        </View>

        <View
            android:layout_width="match_parent"
            android:layout_height="6sp"
            android:background="@color/colorPrimaryDark">
        </View>
    </LinearLayout>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3f2fd"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="20sp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/no1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F44336"
            android:elevation="20sp"
            android:padding="@dimen/btn_padding"
            android:text="@string/scl"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/no2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_margin"
            android:elevation="20sp"
            android:backgroundTint="#E91E63"
            android:padding="@dimen/btn_padding"
            android:text="@string/clg"
            android:textColor="@color/white"
            android:textSize="14sp" />


        <Button
            android:id="@+id/no3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_margin"
            android:elevation="20sp"
            android:backgroundTint="#3F51B5"
            android:padding="@dimen/btn_padding"
            android:text="১৩ তম শিক্ষক নিবন্ধন প্রশ্ন এবং উত্তর"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/no4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_margin"
            android:elevation="20sp"
            android:backgroundTint="#2196F3"
            android:padding="@dimen/btn_padding"
            android:text="১২ তম শিক্ষক নিবন্ধন প্রশ্ন এবং উত্তর"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/no5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_margin"
            android:padding="@dimen/btn_padding"
            android:elevation="20sp"
            android:backgroundTint="#009688"
            android:text="১০ম শিক্ষক নিবন্ধন প্রশ্ন এবং উত্তর"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
</LinearLayout>