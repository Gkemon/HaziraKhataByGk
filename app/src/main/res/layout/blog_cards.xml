<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_main_1_3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/main_card_margin_vertical"
    android:layout_marginBottom="@dimen/main_card_margin_vertical"
    android:layout_marginStart="@dimen/main_card_margin_horizontal"
    android:layout_marginEnd="@dimen/main_card_margin_horizontal"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/card_recycler_elevation">

    <RelativeLayout
        android:id="@+id/RelativeLayoutForNewsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ClickerForBlog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingEnd="@dimen/card_title_margin"
            android:paddingStart="@dimen/card_title_margin">

            <TextView
                android:id="@+id/titleOfBlog"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/TeachersName"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teachers name"
                android:textColor="@color/black"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/dateOfNews"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATE"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <!--<View-->
        <!--android:id="@+id/view_card_main3_line"-->
        <!--android:layout_width="match_parent"-->
        <!--android:elevation="5sp"-->
        <!--android:layout_height="3dp"-->
        <!--android:layout_below="@id/ClickerForNews"-->
        <!--android:background="@color/gray_light" />-->

        <ImageView
            android:id="@+id/MetarialColorPlate"
            android:layout_below="@id/ClickerForBlog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/margin_10"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY" />

        <!--<View-->
        <!--android:id="@+id/view_card_main3_line1"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="3dp"-->
        <!--android:layout_below="@id/MetarialColorPlate"-->
        <!--android:background="@color/gray_light" />-->

        <LinearLayout
            android:id="@+id/ll_card_main3_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/MetarialColorPlate"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/card_title_margin"
            android:paddingStart="@dimen/card_title_margin"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/loveClicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingEnd="@dimen/card_title_margin"
                android:paddingStart="@dimen/card_title_margin">

                <ImageView
                    android:id="@+id/lovedIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="1dp"
                    android:src="@drawable/ic_favorite_border_black_24dp" />

                <TextView
                    android:id="@+id/love"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="পছন্দ"
                    android:textColor="@color/gray_deep" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/SaveClicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingEnd="@dimen/card_title_margin"
                android:paddingStart="@dimen/card_title_margin">

                <ImageView
                    android:id="@+id/SaveClickerIcon"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="1dp"
                    android:src="@drawable/ic_bookmark_border_black_24dp" />

                <TextView
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="সেভ"
                    android:textColor="@color/gray_deep" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ShareClicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingEnd="@dimen/card_title_margin"
                android:paddingStart="@dimen/card_title_margin">

                <ImageView
                    android:id="@+id/img_main_card41_share"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="1dp"
                    android:src="@drawable/ic_share_black_24dp" />

                <TextView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="শেয়ার"
                    android:textColor="@color/gray_deep" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>