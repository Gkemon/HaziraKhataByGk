<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:weightSum="10"
        android:id="@+id/attendanceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#bbdefb"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/attendanceText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="#2196F3"
            app:backgroundTint="#2196F3"
            android:gravity="start|center"
            android:layout_gravity="center_horizontal|center_vertical"
            android:padding="6sp"
            android:text="Roll And Name"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="4">

            <TextView
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" উপস্থিত"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/gray_deep"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/attMarker"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:buttonTint="#4CAF50" />

            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="অনুপস্থিত "
                android:padding="4dp"
                android:textColor="@color/gray_deep"
                android:textSize="12sp" />

            <CheckBox
                android:layout_height="wrap_content"
                android:id="@+id/absentMarker"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:buttonTint="#E91E63" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
