<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
<ScrollView
    android:layout_above="@+id/ll_action"
    android:id="@+id/ll_main_routine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
<TextView
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:textAlignment="textStart"
    android:textColor="@android:color/black"
    android:textSize="14sp"
    android:gravity="start"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Please select routine style from below">

</TextView>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_class_routine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="true"
            android:text="Class routine"></RadioButton>

        <RadioButton
            android:id="@+id/rb_exam_routine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Exam routine"></RadioButton>

        <RadioButton
            android:id="@+id/rb_admin_routine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Admin routine"></RadioButton>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="বিষয় :"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:gravity="start" />

        <EditText
            android:id="@+id/et_subject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="রুম নং"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:gravity="start" />

        <EditText
            android:id="@+id/et_room"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="শুরুর সময়"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:gravity="start" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bt_from_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="ক্লিক করুন"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="শেষ সময়"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:gravity="start" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bt_to_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="ক্লিক করুন"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            />
    </LinearLayout>


    <com.gk.emon.android.BanglaDaysPicker
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/weekdays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sunday_first_day="false"
        app:full_size="true"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Routine lasting">

        </TextView>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb_permanent_routine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:text="permanent">
            </RadioButton>

            <RadioButton
                android:id="@+id/rb_temporary_routine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Temporary">
            </RadioButton>
        </RadioGroup>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bt_date_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select date"
            android:layout_gravity="center"
            style="@style/ButtonPrimaryColorStyle"
             />
    <LinearLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:text="চাইলে রং সিলেক্ট করতে পারেন"
            android:textColor="@color/white"
            android:id="@+id/bt_color_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            app:backgroundTint="@color/colorGreen"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="18sp"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/et_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:hint="চাইলে কোন বিবরণও লিখতে পারেন।"
        android:inputType="textMultiLine"
        android:maxLength="1000"
        android:maxLines="5"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
</ScrollView>

    <LinearLayout
        android:id="@+id/ll_action"
        android:layout_above="@+id/btn_tutorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:text="বাদ"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cancel"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog" />

        <Button
            android:text="সেভ করুন"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/save"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog" />

    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:layout_margin="10dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:backgroundTint="@color/red_primary"
        android:src="@drawable/ic_clear_white_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">
    </android.support.design.widget.FloatingActionButton>
    <include layout="@layout/include_tutorial_button">
    </include>
</RelativeLayout>