<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:elevation="12sp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="scrollable" />
    </com.google.android.material.appbar.AppBarLayout>

    <com.Teachers.HaziraKhataByGk.HelperClassess.ViewUtils.CustomViewPager
        android:id="@+id/viewpager"
        android:layout_above="@+id/btn_add_exam_routine"
        android:layout_below="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    </com.Teachers.HaziraKhataByGk.HelperClassess.ViewUtils.CustomViewPager>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add_exam_routine"
        android:layout_above="@+id/btn_add_class_routine"
        style="@style/ButtonPrimaryColorStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Add routine" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add_class_routine"
        android:layout_alignParentBottom="true"
        style="@style/ButtonOrangeStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If you didnot get it please click here." />

</RelativeLayout>